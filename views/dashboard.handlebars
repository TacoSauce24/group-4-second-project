<!-- views/dashboard.handlebars -->
<section class="custom-section">
  <div class="container ">
    <h2 class="title has-text-centered">
      Welcome,
      {{user.name}}!
    </h2>
    <div class="custom-box">
      <div class="columns is-centered">
        <div class="column is-one-quarter">
          <form id="animalSearchForm" class="has-text-centered">
            <div class="field">
  <label class="label" for="animalName" style="font-size: 25px;">Search for an animal:</label>
              <div class="control">
                <input
                  class="input"
                  type="text"
                  id="animalName"
                  placeholder="Enter the name of the animal"
                />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <button
                  class="button is-primary has-text-black"
                  type="submit"
                >Search</button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Display area for Wikipedia information -->
      <div id="wikipediaInfo" class="content" style="font-size: 22px;"></div>

      <!-- Comment Form Column -->
<div class="column ">
  <div class="box">
    <h2 class="title has-text-centered">Add a Comment</h2>

    <!-- Form to add a new comment -->
<form id="addCommentForm" >
      <div class="field">
        <label class="label" for="newComment" style="font-size: 18px;">New Comment:</label>
        <div class="control">
          <textarea class="textarea is small" id="newComment" placeholder="Type your comment here"></textarea>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-primary" type="submit">Submit Comment</button>
        </div>
      </div>
    </form>
  </div>
</div>

      <div class="comments-container media" style="margin: 12px; font-size: 18px;">
      <div class="database-comments media-content">
       
  <!-- Comment Form Column -->
<div class="column is-one-third">
  <div class="box">
    <h2 class="title has-text-centered">Add a Comment</h2>
    <!-- Form to add a new comment -->
    <form id="addCommentForm">
      <div class="field">
        <label class="label" for="commentTitle">Title:</label>
        <div class="control">
          <input class="input" type="text" id="commentTitle" placeholder="Enter comment title">
        </div>
      </div>
      <div class="field">
        <label class="label" for="newComment">Comment:</label>
        <div class="control">
          <textarea class="textarea is-small" id="newComment" placeholder="Type your comment here"></textarea>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-primary" type="submit">Submit Comment</button>
        </div>
      </div>
    </form>
  </div>
</div>
</div>
</div>
 </div> 

